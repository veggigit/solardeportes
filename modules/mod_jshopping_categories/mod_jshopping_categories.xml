<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="1.6.0"
    client="site"
    method="upgrade">
<name>Jshopping Categories</name> 
	<creationDate>20.12.2012</creationDate>
    <author>MAXXmarketing GmbH</author>
    <authorEmail>marketing@maxx-marketing.net</authorEmail>
    <authorUrl>http://www.webdesigner-profi.de</authorUrl>
    <copyright></copyright>
    <license>Open Source License, GNU GPL</license>
    <version>4.0.1</version>
	<description>Displays a categories in shop.</description>
	<files>
	<filename module="mod_jshopping_categories">mod_jshopping_categories.php</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
	</files>
    <languages>
        <language
            tag="en-GB">en-GB.mod_jshopping_categories.ini</language>
		<language
            tag="de-DE">de-DE.mod_jshopping_categories.ini</language>
		<language
            tag="ru-RU">ru-RU.mod_jshopping_categories.ini</language>
    </languages>     
    <config>
        <fields name="params">
            <fieldset name="basic">  
                <field
                    name="show_image"
                    type="radio"
                    default="0"
                    label="SHOW IMAGE"
                    description="SHOW IMAGES BY MODULE CATEGORIES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="sort"
                    type="list"
                    default="id"
                    label="SORT"
                    description="SORT CATEGORIES BY">
                    <option
                        value="id">ID</option>
                    <option
                        value="name">NAME</option>
                    <option
                        value="order">ORDERING</option>                        
                </field>                
                <field
                    name="ordering"
                    type="radio"
                    default="asc"
                    label="SORT"
                    description="SORT CATEGORIES BY">
                    <option
                        value="asc">ASCENDING</option>
                    <option
                        value="desc">DESCENDING</option>
                </field>
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />                               
            </fieldset> 
        </fields>
    </config>     
</extension>